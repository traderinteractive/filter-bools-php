{
    "name": "traderinteractive/filter-bools",
    "description": "A collection of boolean filters.",
    "keywords": [
        "boolean",
        "bool"
    ],
    "config": {
        "sort-packages": true
    },
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0",
        "traderinteractive/exceptions": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": { "TraderInteractive\\Filter\\": "src/" }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
